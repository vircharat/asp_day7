@model BookTheShowEntity.Admin
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<h1>EditAdmin</h1>
<div>
    <a asp-controller="Admin" asp-action="Index">Index</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>Admin Id</label>
        <input type="text" asp-for="AdminId" class="form-control" placeholder="Enter Admin Id" required />
    </div>
    <div class="form-group">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>Admin Name</label>
        <input type="text" asp-for="AdminName" class="form-control" placeholder="Enter Admin Name" required />
    </div>
    <div class="form-group">
        <label>Admin Email</label>
        <input type="text" asp-for="AdminEmail" class="form-control" placeholder="Enter Admin Address" required />
    </div>
    <div class="form-group">
        <label>Admin Password</label>
        <input type="text" asp-for="AdminPassword" class="form-control" placeholder="Enter Admin Comments" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" /> @*submit display message for required option required works only with submit*@
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Admincontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

