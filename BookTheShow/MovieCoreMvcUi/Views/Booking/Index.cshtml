@model IEnumerable<BookTheShowEntity.Booking>


<div>
    <a asp-controller="Booking" asp-action="BookingEntry">Booking Entry</a>
    <hr />
</div>



<div class="row">
    <div class="col-12">
        <h3>Bookings</h3>
        <hr />

        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>BookingId</th>
                    <th>ShowId</th>
                    <th>UserId</th>
                    <th>MovieName</th>
                    <th>Booking Quantity</th>
                    <th>Booking Total</th>
                    <th>Theatre Location</th>
                    <th>Edit Booking</th>
                    <th>Delete Booking</th>
                </tr>

            </thead>
            <tbody>
               
                @foreach (var Booking in Model) 
                {
                   
                    string a = TempData["userdata"].ToString();
                    TempData.Keep();

                    string imageBase64Data = Convert.ToBase64String(Booking.showTimev.moviev.ImgPoster);
                    string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                    @if (Booking.userv.UservEmail ==  a)
                    
                    {
                        <section class="vh-10" style="background-color: #eee;">
                            <div class="container py-5 h-10">
                                <div class="row d-flex justify-content-center align-items-center h-10">
                                    <div class="col col-md-9 col-lg-7 col-xl-5">
                                        <div class="card" style="border-radius: 15px; background-color: #93e2bb;">
                                            <div class="card-body p-4 text-black">
                                                <div>
                                                    <h6 class="mb-4">Hurrah! @Booking.BookingQuantity  Ticket Booked Successfully</h6>
                                                    <div class="d-flex align-items-center justify-content-between mb-3">
                                                        <p class="small mb-0"><i class="far fa-clock me-2"></i>@Booking.showTimev.moviev.MovievName</p>
                                                        <p class="fw-bold mb-0"> ₹ @Booking.BookingTotal</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="flex-shrink-0 btn-rounded" style=" border-radius: 1rem;">
                                                        <img height="50" width="50" src="@imageDataURL" />
                                                
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <div class="d-flex flex-row align-items-center mb-2">
                                                            <p class="mb-0 me-2"></p>
                                                            <ul class="mb-0 list-unstyled d-flex flex-row" style="color: #1B7B2C;">
                                                                <li>
                                                                    <i class="fas fa-star fa-xs"></i>
                                                                </li>
                                                                <li>
                                                                    <i class="fas fa-star fa-xs"></i>
                                                                </li>
                                                                <li>
                                                                    <i class="fas fa-star fa-xs"></i>
                                                                </li>
                                                                <li>
                                                                    <i class="fas fa-star fa-xs"></i>
                                                                </li>
                                                                <li>
                                                                    <i class="fas fa-star fa-xs"></i>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                        <div>
                                                            <a asp-controller="Booking" asp-action="EditBooking" type="button" class="btn btn-primary"
                                                            asp-route-BookingId="@Booking.BookingId">Edit Booking</a>
                                                           
                                                            <a asp-controller="Booking" asp-action="DeleteBooking" type="button" class="btn btn-danger"
                                                           asp-route-BookingId="@Booking.BookingId">Cancel Booking</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr>
                                                <p class="my-4 pb-1">@Booking.showTimev.theatrev.TheatrevAddress</p>
                                                <button type="button" class="btn btn-success btn-rounded btn-block btn-lg">
                                                    <i class="far fa-clock me-2"></i>@Booking.showTimev.ShowTimevv
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <tr>
                            <td>@Booking.BookingId</td>
                        <td>@Booking.showId</td>
                        <td>@Booking.UservId</td>
                        <td></td>
                        <td></td>
                       
                        <td></td>
                        

                        <td>
                            <a asp-controller="Booking" asp-action="EditBooking" type="button" class="btn btn-primary"
                           asp-route-BookingId="@Booking.BookingId">Edit Booking</a>
                        </td>

                        <td>
                            <a asp-controller="Booking" asp-action="DeleteBooking" type="button" class="btn btn-danger"
                           asp-route-BookingId="@Booking.BookingId">Cancel Booking</a>
                        </td>
                    </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>